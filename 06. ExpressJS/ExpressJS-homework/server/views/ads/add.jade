extends ../shared/layout

block main-content
    .container
        .row
            .col-lg-12
                form.form-horizontal(method="post")
                    .form-group
                        label.col-lg-2.control-label(for='name') Name              
                        .col-lg-10
                            input#name.form-control(type='text', placeholder='Name')
                    .form-group
                        label.col-lg-2.control-label(for='description') Description              
                        .col-lg-10
                            textarea#description.form-control(rows='3',  placeholder='Description')    
                    .form-group               
                        .col-lg-10.col-lg-offset-2
                            input(type="submit" class="btn btn-primary" value="Add ad")
                            input(type="reset" class="btn btn-default" value="Cancel")