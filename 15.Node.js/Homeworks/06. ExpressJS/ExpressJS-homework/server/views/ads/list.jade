extends ../shared/layout

block main-content
    .row
        .col-lg-12
            form.form-horizontal(method="get")
                    .form-group
                        label.control-label(for='text')
                        .col-lg-2
                            input#text.form-control(type='text', name="text",  placeholder='')
                        .col-lg-2
                            input(type="submit" class="btn btn-primary" value="Search")                        
    .well
        .row
            .col-lg-12
                table.table.table-striped.table-hover
                    .thead
                        .tr
                            th Name
                            th Description
                            th By User
                            th 
                            th
                    .tdody
                        each ad in data
                            tr
                                td
                                    a(href= "/ads/#{ad._id}")= ad.name
                                td= ad.description
                                td
                                    a(href= "/users/#{ad.username}")= ad.username
                                if (currentUser == ad.username)
                                    td
                                        a(href= "/ads/edit/#{ad._id}") Edit
                                    td
                                        a(href= "/ads/delete/#{ad._id}") Delete