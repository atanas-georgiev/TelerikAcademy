@model IEnumerable<MoviesApp.Models.PersonViewModel>

<div id="resultsDel"></div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudioName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudioName)
            </td>
            <td>

                @Ajax.ActionLink("Delete", "Delete", new { id = item.Id }, new AjaxOptions
           {
               UpdateTargetId = "resultsDel",
               InsertionMode = InsertionMode.Replace
           }, new { @class = "btn btn-danger" })

                @Ajax.ActionLink("Edit", "Edit", new { id = item.Id }, new AjaxOptions
           {
               UpdateTargetId = "resultsDel",
               InsertionMode = InsertionMode.Replace
           }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>




