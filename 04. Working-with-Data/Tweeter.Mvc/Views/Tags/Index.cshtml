@model IEnumerable<Tweeter.Mvc.Models.TweeterPersonalViewModel>

@{
    ViewBag.Title = "Tags";
}

<h2>Mine</h2>

@using (Ajax.BeginForm("GetTweetsByTag", "Tags",
                                                            new AjaxOptions
                                                            {
                                                                HttpMethod = "GET",
                                                                InsertionMode = InsertionMode.Replace,
                                                                UpdateTargetId = "result"
                                                            }))
{
    <br/>
    <div class="row">
        <div class="form-group">
            <div class="col-md-4">
                @Html.TextBox("tagName", null, new {@class = "form-control"})
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" class="btn btn-default" value="Search"/>
            </div>
        </div>
    </div>
    <br />
}

<div id="result">@Html.Partial("_SearchResults")</div>


