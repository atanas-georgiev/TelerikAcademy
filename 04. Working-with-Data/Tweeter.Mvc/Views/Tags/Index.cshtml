@model IEnumerable<Tweeter.Mvc.Models.TweeterPersonalViewModel>

@{
    ViewBag.Title = "Tags";
}

<h2>Mine</h2>

@using (Ajax.BeginForm("GetTweetsByTag", "Tags",
                                    new AjaxOptions
                                    {
                                        HttpMethod = "GET",
                                        InsertionMode = InsertionMode.Replace,
                                        UpdateTargetId = "result"
                                    }))
{
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBox("tagName", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Search" />
        </div>
    </div>
}

<div id="result">@Html.Partial("_SearchResults")</div>


